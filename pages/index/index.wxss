/* 幻灯片部分 */
swiper{
  width: 100%;
  height: 450rpx;
  align-content: center;

}
swiper image{
  width: 100%;
  height: 100%;
}
/* 讲座规则 */
.lookRule{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color:rgb(226, 237, 244);
  font-size: 35rpx;
  font-family: 楷体;
  color:rgb(48, 75, 152);
}
/* 讲座浏览 */
.tou{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: rgb(226, 237, 244);
  font-family: 微软雅黑;
  font-size: 40rpx;
  font-weight: bold;
  border-top:2rpx solid;
  border-bottom:2rpx solid;
}
.lookLec{
  padding:10rpx 0rpx 10rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid;
  border:10% 40% 10% 40%;
  background-color: rgb(226, 237, 244);
  font-family: 楷体;
  font-size: 35rpx;
}
.lookLec .lookMess{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}
.lookRule .stateMess button{
  height: 50rpx;
  width:80rpx;
}
